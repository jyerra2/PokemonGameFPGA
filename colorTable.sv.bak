								//Light brown
								13: begin
								R = 8'haa;
								G = 8'h83;
								B = 8'h6f;
								end
						  
						      //Olive -- kinda?
						      14: begin
								R = 8'hb1;
								G = 8'ha5;
								B = 8'h36;
								end
								
								//Darker green
								15: begin
								R = 8'h00;
								G = 8'h63;
								B = 8'h04;
								end
								
								//Lighter green + lighter blue
								16: begin
								R = 8'h8c;
								G = 8'hde;
								B = 8'hbd;
								end
								
								
								//Pitch Black
								18: begin

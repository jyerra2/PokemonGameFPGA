								B = 8'h3a;
								end
								
								//Dark Red
								23: begin
								R = 8'hbe;
								G = 8'h3a;
								B = 8'h3c;
								end
								
								//Dark Brown #2
								24: begin
								R = 8'h77;
								G = 8'h41;
